{
  "src_folders": [
    "tests"
  ],
  "output_folder": "reports",
  "test_workers": {
    "enabled": false,
    "workers": "3"
  },
  "live_output": false,
  "selenium": {
    "start_process": true,
    "server_path": "bin/selenium-server-standalone-3.13.0.jar",
    "log_path": "",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "bin/chromedriver.exe",
      "webdriver.gecko.driver": "bin/geckodriver.exe",
      "webdriver.opera.driver": "bin/operadriver.exe"
    }
  },
  
  "test_settings": {
    "chrome": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": false,
        "path": ""
      },
        "desiredCapabilities": {
          "browserName": "chrome"
        }
      },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true
      }
    },
    "opera": {
      "desiredCapabilities": {
        "browserName": "opera"
      }
    }
  }
}